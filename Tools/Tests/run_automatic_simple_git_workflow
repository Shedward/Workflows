#!/usr/bin/env bash
set -euo pipefail

. "$(dirname "$0")/../Lib/request.sh"

main() {
  echo "Running AutomaticSimpleGitWorkflow"
  echo

  request GET "/workflows" >/dev/null

  local response
  response="$(request POST "/workflowInstances" '{"workflowId": "AutomaticSimpleGitWorkflow"}')"

  local id
  id="$(jq -r '.id' <<<"$response")"

  if request GET "/workflowInstances" \
    | jq -e --arg id "$id" 'any(.[]; .id == $id)' >/dev/null
  then
    echo "Instance still exists"
    exit 1
  fi

  echo
  echo "Finished Successfully"
  echo "---"
}

main "$@"
